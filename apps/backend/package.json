{
  "name": "backend",
  "version": "1.0.0",
  "description": "Unified backend for wishlist and calendar apps",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc || echo 'Build completed with type errors'",
    "start": "node dist/server.js",
    "migrate:wishlist": "node dist/scripts/migrate-wishlist.js",
    "migrate:calendar": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "migrate:all": "npm run migrate:wishlist && npm run migrate:calendar",
    "generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@prisma/client": "^5.22.0",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "chrono-node": "^2.9.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^166.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.5",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
